{
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "linebreak-style": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "no-underscore-dangle": "off",
        "max-len": "off",
        "strict": "off",
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-undef": 1,
        "no-unused-vars": 1,
        "valid-jsdoc": [2, {
            "prefer": {
                "return": "returns"
            }
        }]
    },
    "plugins": [
        "react"
    ],
    "env": {
        "es6": true,
        "jest": true
    }
}
